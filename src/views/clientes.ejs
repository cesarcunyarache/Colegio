<%- include('partials/_header'); %>

<%- include('partials/_sidebar'); %>

    <div class="container-sm lado-25 ">
        <div class="col mt-4 ">
            <span id="message" class="px-20 position-fixed top-0 end-0 m-2"></span>
            
            <div class="col-md-15 px-5">
                <div class="px-5">
                    <div class="card-body">
                        <form method="post" id="form" autocomplete="off">
                            <div class="row ">
                                
                                <div class="col mb-3 input_container">
                                    <label for="dni" class="input_label">DNI</label>
                                    <input type="text" name="dni"
                                        onkeypress='return event.charCode >= 48 && event.charCode <= 57' maxlength="8"
                                        class="input_field " id="dni" required>
                                </div>

                                <div class="col mb-3 input_container">
                                    <label for="nombres" class="input_label">Nombres</label>
                                    <input id="nombres" class="input_field" type="text" name="nombres"
                                        title="Inpit title" placeholder="">
                                </div>

                            </div>
                            <div class="row">
                                <div class="col mb-3 input_container">
                                    <label for="apellidos" class="input_label">Apellidos</label>
                                    <input type="text" name="apellidos" class="input_field" id="apellidos" required>
                                </div>

                                <div class="col mb-4 input_container">
                                    <label for="telefono" class="input_label">Telefono</label>
                                    <input type="text" name="telefono"
                                        onkeypress='return event.charCode >= 48 && event.charCode <= 57' maxlength="9"
                                        class="input_field" id="telefono" required>
                                </div>
                            </div>

                            <div class="d-flex justify-content-center align-items-center">
                                <button type="submit" class="btn btn-primary btn-dark" id="action_butto">Guardar Cliente</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
           
            <div class="col-md-15 mt-6 px-5">
                <div class="row">
                    <div class="p-5">
                    <div class="col-sm-12 col-md-12 col-lg-12 col-xl-12">
                        <table id="datatable_users" class="table table-striped table-bordered">
                            <thead class="table-dark">
                                <tr>
                                    
                                    <th>DNI</th>
                                    <th>Nombres</th>
                                    <th>Apellidos</th>
                                    <th>Telefono</th>
                                    <th>Accion</th>
                                </tr>
                            </thead>
                           
                        </table>
                    </div>
                    </div>
                </div>
            </div>

          

        </div>
    </div>

 
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
   <script type="text/javascript" src="https://cdn.datatables.net/1.11.3/js/jquery.dataTables.min.js"></script>
   <script src="../js/main.js"></script>

    <%- include('partials/_footer'); %>